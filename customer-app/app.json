{
  "expo": {
    "name": "Digital Cable Network",
    "slug": "digital-cable-network",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "digitalcablenetwork",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.miteshhq.digitalcablenetwork",
      "infoPlist": {
        "NSLocalNetworkUsageDescription": "Allow app to access local network for streaming",
        "NSBonjourServices": [
          "_http._tcp",
          "_https._tcp"
        ],
        "NSLocationAlwaysAndWhenInUseUsageDescription": "We track your location to provide better service quality and support.",
        "NSLocationWhenInUseUsageDescription": "We need your location to provide service.",
        "NSLocationAlwaysUsageDescription": "We track location in background for service quality.",
        "UIBackgroundModes": [
          "location"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.miteshhq.digitalcablenetwork",
      "versionCode": 1,
      "usesCleartextTraffic": true,
      "networkSecurityConfig": "@xml/network_security_config",
      "permissions": [
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.CHANGE_NETWORK_STATE",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_BACKGROUND_LOCATION",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.FOREGROUND_SERVICE_LOCATION"
      ],
      "intentFilters": [
        {
          "action": "android.intent.action.VIEW",
          "data": [
            {
              "scheme": "http"
            },
            {
              "scheme": "https"
            }
          ],
          "category": [
            "android.intent.category.BROWSABLE",
            "android.intent.category.DEFAULT"
          ]
        }
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/icon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "Allow Digital Cable Network to access your microphone",
          "audioAmbient": false
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Digital Cable Network to track your location for service quality.",
          "locationAlwaysPermission": "Allow Digital Cable Network to track location in background for better service.",
          "locationWhenInUsePermission": "Allow Digital Cable Network to use your location while using the app.",
          "isIosBackgroundLocationEnabled": true,
          "isAndroidBackgroundLocationEnabled": true,
          "isAndroidForegroundServiceEnabled": true
        }
      ],
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "213095c5-9164-4b78-932b-1320748e070b"
      },
      "router": {}
    }
  }
}
